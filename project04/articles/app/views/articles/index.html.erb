<h1>All the World's Articles</h1>

<div id="newLink">
<%= link_to image_tag('icons/add.png'), new_article_path %>
<%= link_to 'Create an Article', new_article_path %>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= truncate(article.body, length: 65) %></td>
    <td><%= article.creation.strftime("%A, %b. %d %Y") %></td>
    <td class="edge">
		<%= link_to image_tag('icons/magnifier.png'), article %>
		<%= link_to image_tag('icons/book_edit.png'), edit_article_path(article) %>
    	<%= link_to image_tag('icons/delete.png'), article, confirm: 'Are you sure?', method: :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= pluralize(@articles.count, "article") + "." %>