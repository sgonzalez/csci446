= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :rating
    %br/
    = f.collection_select :rating, Game::RATINGS, :to_s, :titleize, { :include_blank => true }
  .field
    = f.label :user_id, "Creator"
    %br/
    = f.select(:user_id, User.all.collect {|p| [ p.name, p.id ] }, { :include_blank => false })
  .actions
    = f.submit
