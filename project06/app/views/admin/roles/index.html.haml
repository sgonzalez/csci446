%h1 Listing roles
%table
  %tr
    %th Name
    %th Number of Users
    %th
    %th
    %th
  - @roles.each do |role|
    %tr
      %td= role.name
      %td= role.users.count
      %td= link_to 'Show', admin_role_path(role)
      %td= link_to 'Edit', edit_admin_role_path(role)
      %td= link_to 'Destroy', admin_role_path(role), confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Role', new_admin_role_path
