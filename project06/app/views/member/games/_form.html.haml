= form_for([:member, @game]) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :rating
    %br/
    = f.collection_select :rating, Game::RATINGS, :to_s, :titleize, { :include_blank => true }
  .actions
    = f.submit "Save"
