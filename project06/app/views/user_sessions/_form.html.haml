= form_for(@user_session) do |f|
  - if @user_session.errors.any?
    #error_explanation
      %h2 Could not login:
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .actions
    = f.submit "Login"
