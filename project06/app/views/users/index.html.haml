%h1 Listing users
.paginatewrapper= will_paginate @posts
%table
  %tr
    %th Name
    %th Username
    %th Last Login
    %th FUTURE
  - @users.each do |user|
    %tr{:class => cycle('list_line_odd', 'list_line_even')}
      - if permitted_to? :edit, user
        %td= link_to user.name, edit_user_path(user)
      - else
        %td= user.name
      %td= user.username
      - if user.last_login_at
        %td= time_ago_in_words(user.last_login_at) + ' ago'
      - else
        %td none
      %td FUTURE
